#ifndef READYMAPWEBPLUGIN_COMMAND
#define READYMAPWEBPLUGIN_COMMAND 1

#include <ReadyMapWebPlugin/Export>
#include <osgEarth/JsonUtils>
#include <osg/Referenced>
#include <osg/OperationThread>
#include <osg/ref_ptr>
#include <vector>
#include <map>

namespace ReadyMapWebPlugin
{
    class READYMAPWEBPLUGIN_EXPORT MapControl;

    class READYMAPWEBPLUGIN_EXPORT Command : public osg::Referenced
    {
    public:
        void execute(MapControl* map);
        void setBlock(osg::RefBlock* block);
        const std::string& getResult() {return _result;}

    protected:
        void setResult(const std::string& result) { _result = result; }

        virtual bool operator()(MapControl* map) = 0;
        osg::ref_ptr<osg::RefBlock> _block;
        std::string _result;
    };


    class READYMAPWEBPLUGIN_EXPORT CommandQueue : public osg::Referenced
    {
    public:
        CommandQueue();
        void add(Command* command);
        void execute(MapControl* map);
    protected:
        typedef std::vector<osg::ref_ptr<Command>> Commands;
        Commands _commands;
        OpenThreads::Mutex _commandsMutex;
    };

    class READYMAPWEBPLUGIN_EXPORT CommandArguments
    {
    public:
        CommandArguments( const std::string& json_string );
        std::string operator [] ( const std::string& key ) const;

    private:
        osgEarth::Json::Value _obj;
    };

    class READYMAPWEBPLUGIN_EXPORT CommandFactory : public osg::Referenced
    {
    public:
        virtual Command* create(const std::string& command, const CommandArguments& args) = 0;
    };
}




#endif //READYMAPWEBPLUGIN_COMMAND